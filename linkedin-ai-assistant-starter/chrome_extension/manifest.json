{
  "manifest_version": 3,
  "name": "LinkedIn Draft with AI (Local)",
  "version": "1.0.0",
  "description": "Draft LinkedIn replies with your local FastAPI server. Inserts text only; you click Send.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
